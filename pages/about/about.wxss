/**about.wxss**/
.content {
  height: 100%;
  background-color: #ffffff
}
.header {
  width:100%;
  height: 220rpx;
  position: relative;
  overflow: hidden;
  background: #f4f4f4;
}
.header::before {
  content: '';
  width: 140%;
  height: 220rpx;
  position: absolute;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #fb7598;
}
.header-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  margin: 0 auto;
  left: 0;
  right: 0;
  top: 5rpx;
  z-index: 10;
  overflow: hidden
}

.header-name {
  width: 120rpx;
  position: absolute;
  margin: 0 auto;
  left: 0;
  right: 0;
  top: 140rpx;
  z-index: 10;
  overflow: hidden;
  color: #ffffff
}

.line {
  background: #f4f4f4;
  height: 70rpx
}

.action-item {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eeeeee;
  font-size: 14px;
  padding: 0 14px
}

.contact {
  background-color: #ffffff;
  text-align: left;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  height: 90rpx;
  line-height: 90rpx;
  padding: 0
}

.contact::after {
  border: none
}