/**index.wxss**/
.section {
  width: 100%;
  height: 100%;
  display: flex;
}

.section-item {
  padding: 20rpx 40rpx 40rpx;
  display: inline-block;
  flex: 1;
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
  padding-bottom: 100rpx;
  margin-top: 20rpx
}

.input {
  background: #ffffff;
  padding: 20rpx;
  color: #212121;
  font-size: 33rpx;
  margin-top: 20rpx;
}
.button {
  margin: 40rpx 0;
  background-color: #fb759a;
  color: #ffffff;
  text-align: center;
  display: block;
  padding: 20rpx 0;
  border-radius: 7rpx;
  font-size: 33rpx
}