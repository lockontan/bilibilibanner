.image-wrap {
  overflow: auto;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}

.select-wrap {
  background: #f4f4f4;
  font-size: 14px;
}

.type-picker {
  display: inline-block
}

.type-picker-text {
  line-height: 35px;
  padding-left: 20rpx;
  padding-right: 30rpx;
  position: relative;
  color: #4a4a4a;
  display: inline-block
}

.type-picker-text::after {
  content: '';
  width: 0px;
  height: 0px;
  border: 4px solid #4a4a4a;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
  position: absolute;
  top: 16px;
  right: 0
}

.image-content {
  background: #ffffff;
  padding-bottom: 62px;
  margin: 0 -1px;
  min-height: 100%;
  box-sizing: border-box;
}

.image-item {
  font-size: 0;
  flex: 1;
  width: 50%;
  height: 100%;
  overflow: hidden;
  display: inline-block;
  box-sizing: border-box;
  padding: 0 0 1px 1px;
  position: relative
}

.image-item .rank {
  position: absolute;
  left: 10px;
  top: 10px;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 0 1px #000;
  font-size: 32rpx
}

.image-item .title {
  position: absolute;
  left: 10px;
  bottom: 10px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: block;
  font-weight: 700;
  width: 70%;
  color: #fff;
  text-shadow: 0 0 1px #000;
  font-size: 32rpx
}

.image-item .image {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
